.title {
    width: 100%;

    font-size: 18pt;

    padding: 20rpx;
    border-bottom: 1rpx solid #eee;

    box-sizing: border-box;
}

.content {
    width: 100%;

    padding: 20rpx 10rpx 20rpx 20rpx;
    border-bottom: 2px solid #eee;
    box-sizing: border-box;
}

.content-header {
    display: flex;
    flex-direction: row;
}

.content-header-avatar {
    width: 80rpx;
    height: 80rpx;

    margin-right: 20rpx;
    border-radius: 100%;
}

.content-header-info {
    flex: 1;
}

.content-header-name {
    font-size: 12pt;
    color: #888888;
}

.content-header-time {
    font-size: 10pt;
    color: #b2b2b2;
}


.content-detail {
    padding-top: 10rpx 0;
}

.content-text {
    display: inline;
}

.bottom-option {
    padding-top: 30rpx;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.bottom-left {
    display: flex;
    flex-direction: row;
}

.bottom-right {
    display: flex;
    flex-direction: row;
}

.bottom-text {
    margin: auto 5rpx;
    color: #b2b2b2;
    background-color: #eee;
    padding: 5rpx 10rpx;
    border-radius: 5rpx;
    font-size: 14px;
}

.share-btn {
    margin: auto 0;
    font-size: 14px;
    margin-right: 0rpx;
    line-height: normal;
    background: none !important;
    color: #3594f2;
}

.share-btn::after {
    border: none;
}

/* 回复样式 */
.reply {
    width: 100%;

    padding: 20rpx 10rpx 20rpx 20rpx;
    border-bottom: 2px solid #eee;
    box-sizing: border-box;
}

.reply-header {
    display: flex;
    flex-direction: row;

    box-sizing: border-box;
}

.reply-header-avatar {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    border-radius: 100%;
}

.reply-header-name {
    font-size: 12pt;
    color: #888888;
}

.reply-header-time {
    font-size: 10pt;
    color: #b2b2b2;
}

.reply-quote {
    background-color: #eeeeee;
    margin-bottom: 10rpx;
    margin-right: 10rpx;
    padding: 10rpx 20rpx 10rpx 20rpx
}

.quote-text {
    font-size: 10pt;
}

.reply-detail {
    padding-top: 10rpx;
}
